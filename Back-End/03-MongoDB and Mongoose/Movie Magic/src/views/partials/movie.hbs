<div class="flip flip-vertical">
    <div class="front">
        <img src="{{imageUrl}}" alt="{{title}}">
    </div>
    <div class="back">
        <h1>{{title}}</h1>
        <h2>Genre: {{genre}}</h2>
        <p>{{description}}</p>
        <a href="/movie/{{_id}}" class="details">Details</a>
        <a href="/movie/{{_id}}/attach" class="details">Add Cast</a>
    </div>
</div>